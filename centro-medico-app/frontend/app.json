{
  "expo": {
    "name": "ASOCRISTA",
    "slug": "asocrista-centro-medico",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/asologo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.asocrista.centromedico",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Esta aplicación usa Face ID para una autenticación rápida y segura."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/asologo.png",
        "backgroundColor": "#2E7D32"
      },
      "package": "com.asocrista.centromedico",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "asocrista-centro-medico"
      }
    }
  }
}
